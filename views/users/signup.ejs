<%layout("/layouts/boilerplat.ejs")%>
<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Wanderlust</h1> 
        <div class="col-6 offset-3">
    <form method="post" action="/signup"  class="needs-validation" novalidate ><div class="mb-3 ">
        <label for="Username" class="form-label">Username</label>
        <div class="mb-3">
        <input type="text" name="username" placeholder="enter Username" id="username" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>  
    </div>
    <label for="email" class="form-label">Email</label>
    <div class="mb-3">
        <input type="email" name="email" placeholder="enter Email" id="Email" class="form-control" required>
       
    </div>
    <label for="password" class="form-label">Password</label>
    <div class="mb-3">
        <input type="password" name="password" placeholder="enter Password" id="password" class="form-control" required>
       
    </div>
    <button class="btn btn-success">signUp</button>
</form>
<p>Already registered? <a href="/login">Login</a></p>
</div>
</div>
</body>